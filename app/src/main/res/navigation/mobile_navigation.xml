<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.tweak.newsnow.ui.bbc.HomeFragment"
        android:label="BBC"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_skyNewsFragment"
            app:destination="@id/skyNewsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.tweak.newsnow.ui.tnt.GalleryFragment"
        android:label="TNT"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.tweak.newsnow.ui.cnn.SlideshowFragment"
        android:label="CNN"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/foxNewsFragment"
        android:name="com.tweak.newsnow.Fragment.FoxNewsFragment"
        android:label="FOX NEWS"
        tools:layout="@layout/fragment_fox_news" />
    <fragment
        android:id="@+id/skyNewsFragment"
        android:name="com.tweak.newsnow.Fragment.SkyNewsFragment"
        android:label="SKY NEWS"
        tools:layout="@layout/fragment_sky_news" />
</navigation>